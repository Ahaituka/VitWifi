            <Viewbox>

                <TextBlock Text="AutoConnect" />


            </Viewbox>


            <Viewbox Grid.Row="1" Margin="20">
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <TextBox
                        x:Name="User"
                        Width="250"
                        Margin="10"
                        HorizontalAlignment="Center"
                        PlaceholderText="UserName"
                        TextChanged="User_TextChanged" />
                    <PasswordBox
                        x:Name="Pass"
                        Width="250"
                        HorizontalAlignment="Center"
                        PasswordChanged="Pass_PasswordChanged"
                        PlaceholderText="Password" />
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="2">
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button
                        x:Name="register"
                        Width="150"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Click="Register"
                        IsEnabled="False">
                        Register
                    </Button>
                    <Button
                        x:Name="LoginButton"
                        Width="150"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Click="Login"
                        IsEnabled="False">
                        Login
                    </Button>
                    <Button
                        x:Name="LogoutButton"
                        Width="150"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Click="Logout"
                        IsEnabled="False">
                        Logout
                    </Button>


                </StackPanel>
            </Viewbox>

        </Grid>

    </RelativePanel>
